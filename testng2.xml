<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="IHSM_Suite" thread-count="1">

	<listeners>
		<listener class-name="com.ihsm.university.utilities.ExtentListener" />
	</listeners>

	<!-- Chrome Test -->
	<test name="IHSM_UNIVERSITY_Chrome">
		<parameter name="os" value="windows" />
		<parameter name="browser" value="chrome" />
		<classes>

			<!-- Class Attendance -->
			<class
				name="com.ihsm.university.testcases.flows.attendance.IHSM_ClassAttendanceTest" />
			<class
				name="com.ihsm.university.testcases.flows.attendance.IHSM_ClassPerformanceScore" />
			<class
				name="com.ihsm.university.testcases.flows.attendance.IHSM_UnitMarksTest" />

		</classes>
	</test>

