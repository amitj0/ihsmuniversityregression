<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="IHSM_Suite" thread-count="2">

	<listeners>
		<listener class-name="com.ihsm.university.utilities.ExtentListener" />
	</listeners>

	<!-- Chrome Test -->
	<test name="IHSM_UNIVERSITY_Chrome">
		<parameter name="os" value="windows" />
		<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_StudentRegistrationFullWorkFlow" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_EmployeeRegistrationFullWorkFlow" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_ClassScheduling" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_ClassScheduling2" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_ClassScheduling4" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_ClassScheduling3" />
			<class
				name="com.ihsm.university.testcases.workflow.IHSM_ExamScheduling" />

		</classes>
	</test>

	<!-- Firefox Test (optional) -->

